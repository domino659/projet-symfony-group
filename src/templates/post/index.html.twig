{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <h1>Post index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Price</th>
                <th>Thumbnails_urls</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.price }}</td>
                <td>{{ post.thumbnailsUrls ? post.thumbnailsUrls|join(', ') : '' }}</td>
                <td>
                    <a href="{{ path('app_ad_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('app_ad_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_ad_new') }}">Create new</a>
{% endblock %}
